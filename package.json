{
  "name": "fg-cw-backend",
  "version": "0.0.0",
  "description": "FG Caseworking Backend Service",
  "main": "src/main.js",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "lint": "eslint",
    "test": "npm run test:unit -- --run && npm run test:integration -- --run",
    "test:unit": "vitest --config vitest.config.js --dir src",
    "test:integration": "vitest --config test/vitest.config.js --dir test",
    "test:integration:report": "vitest --config test/vitest.config.js --dir test --reporter=html --run",
    "test:integration:service": "vitest --config test/vitest.config.js test/integration/service --run",
    "test:integration:events": "vitest --config test/vitest.config.js test/integration/events --run",
    "test:integration:workflows": "vitest --config test/vitest.config.js test/integration/workflows --run",
    "test:report": "npm run test:unit -- --run && npm run test:integration:report",
    "test:report:custom": "node scripts/generate-test-report.js",
    "dev": "node --env-file .env src/main.js",
    "publish:case:new": "node scripts/publish-create-new-case.js",
    "publish:case:pmf": "node scripts/publish-create-new-case.js pigs-might-fly",
    "publish:case:agreement": "node scripts/publish-case-agreement-update-command.js",
    "postinstall": "npm run setup:husky && npm run setup:env",
    "setup:env": "cp --update=none .env.example .env || true",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module",
    "migration:create": "migrate-mongo create"
  },
  "lint-staged": {
    "**/*.js": "npm run lint",
    "*": "prettier --ignore-unknown --list-different --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@aws-sdk/client-sns": "3.835.0",
    "@aws-sdk/client-sqs": "3.835.0",
    "@defra/hapi-tracing": "1.0.0",
    "@elastic/ecs-pino-format": "1.5.0",
    "@hapi/boom": "10.0.1",
    "@hapi/hapi": "21.4.0",
    "@hapi/inert": "^7.1.0",
    "@hapi/jwt": "3.2.0",
    "@hapi/vision": "^7.0.3",
    "@hapi/wreck": "^18.1.0",
    "@joi/date": "2.1.1",
    "aws4": "1.13.2",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "global-agent": "3.0.0",
    "hapi-pino": "12.1.0",
    "hapi-pulse": "3.0.1",
    "hapi-swagger": "^17.3.2",
    "joi": "17.13.3",
    "jose": "6.0.12",
    "jsonpath": "1.1.1",
    "migrate-mongo": "12.1.3",
    "mongodb": "6.17.0",
    "pino": "9.7.0",
    "pino-pretty": "13.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "9.29.0",
    "eslint-config-prettier": "10.1.5",
    "husky": "9.1.7",
    "lint-staged": "^16.1.2",
    "neostandard": "0.12.1",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "testcontainers": "^11.0.3",
    "vitest": "3.2.4"
  }
}
