{
  "name": "fg-cw-backend",
  "version": "0.0.0",
  "description": "FG Caseworking Backend Service",
  "main": "src/main.js",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "lint": "eslint",
    "test": "npm run test:unit -- --run && npm run test:integration -- --run",
    "test:unit": "vitest --config vitest.config.js --dir src",
    "test:integration": "vitest --config test/vitest.config.js --dir test",
    "test:integration:verbose": "PRINT_LOGS=1 npm run test:integration",
    "test:contract": "vitest --config test/contract/vitest.config.js --dir test/contract",
    "test:contract:local": "PACT_USE_LOCAL=true vitest --config test/contract/vitest.config.js --dir test/contract",
    "dev": "nodemon --env-file .env src/main.js",
    "publish:case:new": "node scripts/publish-create-new-case.js",
    "publish:case:pmf": "node scripts/publish-create-new-case.js pigs-might-fly",
    "publish:case:status:update": "node scripts/publish-update-case-status.js",
    "postinstall": "npm run setup:husky && npm run setup:env",
    "setup:env": "cp --update=none .env.example .env || true",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module",
    "migration:create": "migrate-mongo create"
  },
  "lint-staged": {
    "**/*.js": "npm run lint",
    "*": "prettier --ignore-unknown --list-different --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@aws-sdk/client-sns": "3.972.0",
    "@aws-sdk/client-sqs": "3.988.0",
    "@aws-sdk/credential-providers": "3.972.0",
    "@defra/hapi-tracing": "1.30.0",
    "@elastic/ecs-pino-format": "1.5.0",
    "@hapi/boom": "10.0.1",
    "@hapi/hapi": "21.4.4",
    "@hapi/inert": "^7.1.0",
    "@hapi/jwt": "3.2.3",
    "@hapi/vision": "^7.0.3",
    "@hapi/wreck": "^18.1.0",
    "@joi/date": "2.1.1",
    "aws4": "1.13.2",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "global-agent": "3.0.0",
    "hapi-pino": "13.0.0",
    "hapi-pulse": "3.0.1",
    "hapi-swagger": "^17.3.2",
    "joi": "17.13.3",
    "jose": "6.1.3",
    "jsonata": "2.1.0",
    "jsonpath-plus": "10.3.0",
    "migrate-mongo": "14.0.7",
    "mongodb": "7.0.0",
    "pino": "10.2.1",
    "pino-pretty": "13.1.3"
  },
  "devDependencies": {
    "@pact-foundation/pact": "16.1.0",
    "@vitest/coverage-v8": "4.0.17",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "neostandard": "0.12.2",
    "nodemon": "3.1.11",
    "prettier": "3.8.1",
    "prettier-plugin-organize-imports": "4.3.0",
    "testcontainers": "^11.11.0",
    "vitest": "4.0.17"
  }
}
